{%- liquid
  assign block_settings = block.settings
  assign product = closest.product
  assign current_variant = product.selected_or_first_available_variant
  assign is_made_to_order = current_variant.metafields.custom.made_to_order
  assign delivery_date = current_variant.metafields.custom.delivery_date
-%}

{% if is_made_to_order and delivery_date %}
  <delivery-date-block
    data-prefix="{{ block_settings.prefix_text }}"
    data-visible="true"
    data-date="{{ delivery_date }}"
  >
    <div 
      class="delivery-date spacing-style" 
      style="{% render 'spacing-style', settings: block_settings %}"
      {{ block.shopify_attributes }}
    >
      <div class="delivery-date__content">
        <span class="delivery-date__prefix">{{ block_settings.prefix_text }}</span>
        <span class="delivery-date__date">
          {%- liquid
            assign day = delivery_date | date: "%d" | plus: 0
            assign suffix = "th"
            if day == 1 or day == 21 or day == 31
              assign suffix = "st"
            elsif day == 2 or day == 22
              assign suffix = "nd"
            elsif day == 3 or day == 23
              assign suffix = "rd"
            endif
          -%}
          {{ day }}{{ suffix }} of {{ delivery_date | date: "%B %Y" }}
        </span>
      </div>
    </div>
  </delivery-date-block>
{% else %}
  <delivery-date-block
    data-prefix="{{ block_settings.prefix_text }}"
    data-visible="false"
    data-date="{{ delivery_date }}"
    style="display: none;"
  >
    <div 
      class="delivery-date spacing-style" 
      style="{% render 'spacing-style', settings: block_settings %}"
      {{ block.shopify_attributes }}
    >
      <div class="delivery-date__content">
        <span class="delivery-date__prefix">{{ block_settings.prefix_text }}</span>
        <span class="delivery-date__date"></span>
      </div>
    </div>
  </delivery-date-block>
{% endif %}

<style>
.delivery-date {
  width: 100%;
}

delivery-date-block[data-visible="false"] {
  display: none;
}

.delivery-date__content {
  font-size: 0.875rem;
  color: var(--color-foreground);
}

.delivery-date__prefix {
  margin-right: 0.1rem;
  color: #A6A6A3;
}
</style>

{% javascript %}
class DeliveryDateBlock extends HTMLElement {
  connectedCallback() {
    this.dateOutput = this.querySelector('.delivery-date__date');
    
    const variantPicker = document.querySelector('variant-picker');
    if (!variantPicker) return;

    variantPicker.addEventListener('change', (e) => {
      const input = e.target;
      if (input.type !== 'radio') return;
      
      const variantId = input.dataset.variantId;
      if (!variantId || !window.productVariantMetafields) return;

      const variantMeta = window.productVariantMetafields[variantId];
      if (!variantMeta) return;

      const isMadeToOrder = variantMeta.made_to_order === true;
      const deliveryDate = variantMeta.delivery_date;

      const shouldShow = isMadeToOrder && deliveryDate;
      this.dataset.visible = shouldShow ? 'true' : 'false';
      this.style.display = shouldShow ? '' : 'none';
      this.dataset.date = deliveryDate || '';

      if (shouldShow && this.dateOutput) {
        this.dateOutput.textContent = this.formatDate(deliveryDate);
      }
    });
  }

  formatDate(dateString) {
    const date = new Date(dateString);
    const day = date.getDate();
    const month = date.toLocaleDateString('en-US', { month: 'long' });
    const year = date.getFullYear();
    const suffix = this.getDaySuffix(day);
    
    return `${day}${suffix} of ${month} ${year}`;
  }

  getDaySuffix(day) {
    if (day >= 11 && day <= 13) return 'th';
    switch (day % 10) {
      case 1: return 'st';
      case 2: return 'nd';
      case 3: return 'rd';
      default: return 'th';
    }
  }
}

if (!customElements.get('delivery-date-block')) {
  customElements.define('delivery-date-block', DeliveryDateBlock);
}
{% endjavascript %}

