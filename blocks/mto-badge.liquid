{%- liquid
  assign block_settings = block.settings
  assign product = closest.product
  assign current_variant = product.selected_or_first_available_variant
  assign is_made_to_order = current_variant.metafields.custom.made_to_order
-%}

<made-to-order-badge data-visible="{{ is_made_to_order }}">
  <div 
    class="made-to-order-badge spacing-style" 
    style="{% render 'spacing-style', settings: block_settings %}" 
    {{ block.shopify_attributes }}
  >
    {% render 'text', block: block %}
  </div>
</made-to-order-badge>

<style>
.made-to-order-badge {
  width: 100%;
}

made-to-order-badge[data-visible="false"] {
  display: none;
}

made-to-order-badge .made-to-order-badge .text-block {
  text-transform: uppercase;
}
</style>

{% javascript %}
class MadeToOrderBadge extends HTMLElement {
  connectedCallback() {
    const variantPicker = document.querySelector('variant-picker');
    if (!variantPicker) return;

    variantPicker.addEventListener('change', (e) => {
      const input = e.target;
      if (input.type !== 'radio') return;
      
      const variantId = input.dataset.variantId;
      if (!variantId || !window.productVariantMetafields) return;

      const variantMeta = window.productVariantMetafields[variantId];
      if (!variantMeta) return;

      this.dataset.visible = variantMeta.made_to_order === true;
    });
  }
}

if (!customElements.get('made-to-order-badge')) {
  customElements.define('made-to-order-badge', MadeToOrderBadge);
}
{% endjavascript %}

